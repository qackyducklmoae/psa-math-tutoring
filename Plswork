<!-- LOGIN SCREEN -->
<div id="login-gate">
    <div class="container">
        <h1>EDUROCKS V3</h1>
        <p>Paragon Science Academy - Student SSO</p>
        <input type="password" id="pass" placeholder="Enter Access Code...">
        <button onclick="check()">Sign In</button>
    </div>
</div>

<!-- GAME DASHBOARD -->
<div id="dashboard" class="hidden">
    <div class="container">
        <h2>Assignment Modules</h2>
        <p>Select a research tool to begin:</p>
        <button onclick="launch(0)">Module A: 3kh0 Lite</button>
        <button onclick="launch(1)">Module B: GN-Math</button>
        <button onclick="launch(2)">Module C: CoolMath</button>
        <button onclick="launch(3)">Module D: Media Player</button>
        <button onclick="launch(4)">Module E: Web Proxy</button>
    </div>
</div>

<script>
    // 1. DATA (Encoded to hide from GoGuardian)
    const _0xPASS = "Desi6218!";
    const _0xEXIT = "https://app.schoology.com";
    const _0xURLS = [
        'https://lite.3kh0.net',
        'https://gn-math.github.io',
        'https://www.coolmathgames.com',
        'https://vidsrc.me',
        'https://www.blockaway.net'
    ];

    // 2. PANIC KEY FOR MAIN DASHBOARD (= or `)
    document.addEventListener('keyup', (e) => {
        if (e.key === "=" || e.key === "`") window.location.replace(_0xEXIT);
    });

    // 3. LOGIN CHECK
    function check() {
        const input = document.getElementById('pass').value;
        if (input === _0xPASS) {
            document.getElementById('login-gate').classList.add('hidden');
            document.getElementById('dashboard').classList.remove('hidden');
        } else {
            window.location.replace("https://google.com");
        }
    }

    // 4. THE CLOAK LAUNCHER
    function launch(index) {
        const url = _0xURLS[index];
        const win = window.open('about:blank', '_blank');
        
        if (!win) {
            alert("Please allow pop-ups for this assignment!");
            return;
        }

        // TAB MASKING (Sets title and Schoology icon)
        win.document.title = "Home | Schoology";
        const icon = win.document.createElement('link');
        icon.rel = 'icon';
        icon.href = 'https://asset-cdn.schoology.com';
        win.document.head.appendChild(icon);

        // CREATE GAME FRAME
        const frame = win.document.createElement('iframe');
        frame.style = "position:fixed; top:0; left:0; width:100%; height:100%; border:none; margin:0; padding:0;";
        frame.src = url;
        win.document.body.appendChild(frame);

        // PERSISTENT PANIC KEY (Runs every 0.5s so games can't block it)
        setInterval(() => {
            if (!win || win.closed) return;
            win.onkeyup = (e) => {
                if (e.key === "=" || e.key === "`") win.location.replace(_0xEXIT);
            };
        }, 500);

        // HIDE EVIDENCE (Redirect original tab)
        window.location.replace("https://google.com");
    }

    // 5. ANTI-THEFT (Disable Right-Click and F12)
    document.addEventListener('contextmenu', e => e.preventDefault());
    document.onkeydown = (e) => {
        if (e.keyCode == 123 || (e.ctrlKey && e.shiftKey && e.keyCode == 73)) return false;
    };
</script>

</body>
