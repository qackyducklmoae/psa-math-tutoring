        h1, h2 { color: #58a6ff; margin-bottom: 10px; }
        button { background: #238636; color: white; border: none; padding: 12px; font-size: 16px; border-radius: 6px; cursor: pointer; margin: 8px; width: 90%; transition: 0.2s; font-weight: bold; }
        button:hover { background: #2ea043; transform: scale(1.02); }
        .hidden { display: none; }
        input { background: #010409; border: 1px solid #30363d; color: white; padding: 12px; border-radius: 6px; margin-bottom: 15px; width: 85%; outline: none; }
