<script>
    // --- DATABASE (The Secret Sauce) ---
    // If you have a file named "game1.html" in your folder, put "./game1.html" as the 'u'
    const db = [
        { n: "Internal App 1", u: "./app1.html", i: "ðŸ“¦" },
        { n: "Internal App 2", u: "./app2.html", i: "ðŸ“¦" },
        { n: "Legacy Code", u: "aHR0cHM6Ly8zayhoLWxpdGUuZ2l0aHViLmlv", i: "ðŸŒ" }, // Encoded URL
        { n: "Terminal", u: "aHR0cHM6Ly9yYWRvbi5nYW1lcw==", i: "ðŸŒ" }
    ];

    const token = "RGVzaTYyMTgh"; // Desi6218!

    function unlock() {
        if (btoa(document.getElementById('p').value) === token) {
            document.getElementById('gate').classList.add('hidden');
            document.getElementById('dash').classList.remove('hidden');
            document.getElementById('music-frame').classList.remove('hidden');
            render();
        }
    }

    function render() {
        const grid = document.getElementById('g');
        db.forEach(item => {
            const card = document.createElement('div');
            card.className = 'card';
            card.innerHTML = `<div style="font-size:30px; margin-bottom:10px;">${item.i}</div><span>${item.n}</span>`;
            card.onclick = () => launch(item.u);
            grid.appendChild(card);
        });
    }

    function launch(source) {
        let finalUrl;
        try {
            // Check if it's an encoded URL or a local file path
            finalUrl = (source.startsWith('./')) ? source : atob(source);
        } catch(e) { finalUrl = source; }

        const win = window.open('about:blank', '_blank');
        const doc = win.document;
        doc.title = "Home | Schoology";
        
        // Favicon
        const link = doc.createElement('link');
        link.rel = 'icon'; link.href = 'https://asset-cdn.schoology.com/favicon.ico';
        doc.head.appendChild(link);

        const frame = doc.createElement('iframe');
        frame.style = "position:fixed;top:0;left:0;width:100%;height:100%;border:none;margin:0;background:white;";
        frame.src = finalUrl;
        doc.body.appendChild(frame);

        // Emergency Switch
        win.addEventListener('keydown', (e) => {
            if(e.key === 'Escape') win.location.replace("https://app.schoology.com");
        });
    }

    // --- SYSTEM UI ---
    setInterval(() => {
        document.getElementById('clock').innerText = new Date().toLocaleTimeString();
        if (navigator.getBattery) navigator.getBattery().then(b => {
            document.getElementById('batt').innerText = `BATT: ${Math.round(b.level * 100)}%`;
        });
    }, 1000);

    // --- MATRIX ---
    const c = document.getElementById('matrix');
    const ctx = c.getContext('2d');
    c.width = window.innerWidth; c.height = window.innerHeight;
    const yPos = Array(Math.floor(c.width/15)).fill(0);
    function draw() {
        ctx.fillStyle = "rgba(0,0,0,0.05)"; ctx.fillRect(0,0,c.width,c.height);
        ctx.fillStyle = "#0f8"; ctx.font = "15px monospace";
        yPos.forEach((y, i) => {
            ctx.fillText(String.fromCharCode(Math.random()*128), i*15, y);
            if(y > c.height && Math.random() > 0.975) yPos[i] = 0;
            else yPos[i] += 15;
        });
    }
    setInterval(draw, 50);
</script>
