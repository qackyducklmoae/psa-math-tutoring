<script>
    // THE SCRAMBLED DATABASE (Encoded to bypass keyword filters)
    // n = name, u = encoded url, c = category
    const db = [
        { n: "Engine 1", u: "aHR0cHM6Ly8zayhoLWxpdGUuZ2l0aHViLmlv", c: "G" },
        { n: "Engine 2", u: "aHR0cHM6Ly9yYWRvbi5nYW1lcw==", c: "G" },
        { n: "Portal", u: "aHR0cHM6Ly9wb2tpLmNvbQ==", c: "G" },
        { n: "Proxy 1", u: "aHR0cHM6Ly93d3cuYmxvY2thd2F5Lm5ldA==", c: "P" },
        { n: "Proxy 2", u: "aHR0cHM6Ly9nb2ludGVyc3RlbGxhci5hcHA=", c: "P" },
        { n: "Tool 1", u: "aHR0cHM6Ly9waG90b3BlYS5jb20=", c: "T" }
    ];

    const pass = "RGVzaTYyMTgh"; // Desi6218!

    function unlock() {
        if (btoa(document.getElementById('p').value) === pass) {
            document.getElementById('gate').classList.add('hidden');
            document.getElementById('main').classList.remove('hidden');
            document.getElementById('music').classList.remove('hidden');
            document.getElementById('k').classList.remove('hidden');
            render();
        }
    }

    function render() {
        const grid = document.getElementById('g');
        grid.innerHTML = '';
        db.forEach(item => {
            const card = document.createElement('div');
            card.className = 'card';
            // Decodes favicon domain briefly to fetch image
            const domain = new URL(atob(item.u)).hostname;
            card.innerHTML = `<img src="https://www.google.com/s2/favicons?sz=64&domain=${domain}"><span>${item.n}</span>`;
            card.onclick = () => launch(item.u);
            grid.appendChild(card);
        });
    }

    function launch(encUrl) {
        const url = atob(encUrl);
        const win = window.open('about:blank', '_blank');
        const doc = win.document;
        
        // Tab Cloak
        doc.title = "Home | Schoology";
        const icon = doc.createElement('link');
        icon.rel = 'icon'; icon.href = 'https://asset-cdn.schoology.com/favicon.ico';
        doc.head.appendChild(icon);

        const f = doc.createElement('iframe');
        f.style = "position:fixed;top:0;left:0;width:100%;height:100%;border:none;background:white;";
        f.src = url;
        doc.body.appendChild(f);

        // Escape to Schoology
        win.addEventListener('keydown', (e) => {
            if(e.key === 'Escape') win.location.replace("https://app.schoology.com");
        });
    }

    function search() {
        const q = document.getElementById('s').value.toLowerCase();
        document.querySelectorAll('.card').forEach(c => {
            c.style.display = c.innerText.toLowerCase().includes(q) ? 'block' : 'none';
        });
    }

    // MATRIX BG
    const canvas = document.getElementById('c');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth; canvas.height = window.innerHeight;
    const col = Array(Math.floor(canvas.width/15)).fill(0);
    function matrix() {
        ctx.fillStyle = "rgba(0,0,0,0.05)"; ctx.fillRect(0,0,canvas.width,canvas.height);
        ctx.fillStyle = "#0f8"; ctx.font = "15px monospace";
        col.forEach((y, i) => {
            ctx.fillText(String.fromCharCode(Math.random()*128), i*15, y);
            if(y > canvas.height && Math.random() > 0.975) col[i] = 0;
            else col[i] += 15;
        });
    }
    setInterval(matrix, 50);

    // CLOCK
    setInterval(() => {
        document.getElementById('st').innerHTML = `TIME: ${new Date().toLocaleTimeString()}<br>STATUS: ENCRYPTED`;
    }, 1000);
</script>
