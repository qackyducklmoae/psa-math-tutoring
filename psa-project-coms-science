    function check() {
        if (document.getElementById('pass').value === _0xPASS) {
            document.getElementById('login-gate').classList.add('hidden');
            document.getElementById('dashboard').classList.remove('hidden');
            filterApps('All');
        } else { window.location.replace("https://google.com"); }
    }

    function filterApps(category) {
        const grid = document.getElementById('grid');
        grid.innerHTML = '';
        const filtered = category === 'All' ? apps : apps.filter(a => a.c === category);
        
        filtered.forEach(app => {
            const div = document.createElement('div');
            div.className = 'app-card';
            div.innerHTML = `<img src="https://www.google.com{app.u}"><span>${app.n}</span>`;
            div.onclick = () => launch(app.u);
            grid.appendChild(div);
        });

        // Update active tab styling
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.toggle('active', btn.innerText === category);
        });
    }

    function launch(url) {
        const win = window.open('about:blank', '_blank');
        if (!win) return alert("System Warning: Allow Pop-ups for authentication!");
        win.document.title = "Home | Schoology";
        const icon = win.document.createElement('link'); icon.rel = 'icon'; icon.href = 'https://asset-cdn.schoology.com';
        win.document.head.appendChild(icon);
        const frame = win.document.createElement('iframe');
        frame.style = "position:fixed; top:0; left:0; width:100%; height:100%; border:none; margin:0;";
        frame.src = url; win.document.body.appendChild(frame);
        
        // Kill Switch Injection
        setInterval(() => {
            if (!win || win.closed) return;
            win.onkeyup = (e) => { if (e.key === "=" || e.key === "`") win.location.replace(_0xEXIT); };
        }, 500);
        window.location.replace("https://google.com");
    }

    document.addEventListener('keyup', (e) => { if (e.key === "=" || e.key === "`") window.location.replace(_0xEXIT); });
    document.addEventListener('contextmenu', e => e.preventDefault());
