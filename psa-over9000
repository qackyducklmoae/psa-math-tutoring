<script>
    // --- SETTINGS & APPS ---
    const _0xSECRET = "RGVzaTYyMTgh"; // Desi6218!
    let strikes = 0;

    const apps = [
        { n: "Radon Engine", u: "https://radon.games", c: "Games" },
        { n: "3kh0 Lite", u: "https://3kh0-lite.github.io", c: "Games" },
        { n: "1v1.LOL", u: "https://1v1.lol", c: "Games" },
        { n: "Poki Arcade", u: "https://poki.com", c: "Games" },
        { n: "Slope", u: "https://kdata1.com/2020/05/slope/", c: "Games" },
        { n: "Retro Bowl", u: "https://game316087.konggames.com", c: "Games" },
        { n: "BlockAway", u: "https://www.blockaway.net", c: "Proxies" },
        { n: "Doge Proxy", u: "https://doge.unblocker.cc", c: "Proxies" },
        { n: "Interstellar", u: "https://gointerstellar.app", c: "Proxies" },
        { n: "Wolfram Alpha", u: "https://www.wolframalpha.com", c: "Tools" },
        { n: "Photopea", u: "https://www.photopea.com", c: "Tools" },
        { n: "VS Code Web", u: "https://vscode.dev", c: "Tools" }
    ];

    // --- SYSTEM CORE ---
    function check() {
        const val = document.getElementById('pass').value;
        if (window.btoa(val) === _0xSECRET) {
            document.getElementById('login-gate').classList.add('hidden');
            document.getElementById('dashboard').classList.remove('hidden');
            document.getElementById('music-player').classList.remove('hidden');
            document.getElementById('destruct').classList.remove('hidden');
            render('All');
        } else {
            strikes++;
            if (strikes >= 3) triggerBSOD();
            else alert("ACCESS DENIED: Attempt " + strikes + "/3");
        }
    }

    function render(cat) {
        const grid = document.getElementById('app-grid');
        grid.innerHTML = '';
        const filtered = cat === 'All' ? apps : apps.filter(a => a.c === cat);
        
        filtered.forEach(app => {
            const icon = `https://www.google.com/s2/favicons?sz=64&domain=${new URL(app.u).hostname}`;
            const card = document.createElement('div');
            card.className = 'card';
            card.innerHTML = `<img src="${icon}"><span>${app.n}</span>`;
            card.onclick = () => launch(app.u);
            grid.appendChild(card);
        });
    }

    // --- UNSTOPPABLE CLOAK ---
    function launch(url) {
        const win = window.open('about:blank', '_blank');
        const doc = win.document;
        doc.title = "Home | Schoology";
        const link = doc.createElement('link');
        link.rel = 'icon'; link.href = 'https://asset-cdn.schoology.com/favicon.ico';
        doc.head.appendChild(link);

        const frame = doc.createElement('iframe');
        frame.style = "position:fixed;top:0;left:0;width:100%;height:100%;border:none;margin:0;";
        frame.src = url;
        doc.body.appendChild(frame);
        
        // Panic Switch inside the tab
        win.addEventListener('keydown', (e) => {
            if(e.key === 'Escape') win.location.replace("https://app.schoology.com");
        });
    }

    // --- PRANKS & SECURITY ---
    function triggerBSOD() {
        document.body.innerHTML = `<div style="background:#0078d7;color:white;height:100vh;padding:10vw;font-family:sans-serif;cursor:none;">
            <div style="font-size:100px">:(</div>
            <h2>Your PC ran into a problem and needs to restart.</h2>
            <p id="perc">0% complete</p>
        </div>`;
        let p = 0;
        const itv = setInterval(() => {
            p += Math.floor(Math.random()*7);
            if(p>=100) { clearInterval(itv); window.location.href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"; }
            document.getElementById('perc').innerText = p + "% complete";
        }, 400);
    }

    function selfDestruct() {
        // "Clears" the UI and leaves
        document.body.innerHTML = "<div style='color:red; font-family:monospace; padding:50px;'>TERMINATING SESSION... CACHE PURGED.</div>";
        setTimeout(() => { window.location.replace("https://google.com"); }, 1500);
    }

    // --- UTILS ---
    function search() {
        const q = document.getElementById('search').value.toLowerCase();
        document.querySelectorAll('.card').forEach(c => {
            c.style.display = c.innerText.toLowerCase().includes(q) ? "block" : "none";
        });
    }

    function filter(cat) {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        event.target.classList.add('active');
        render(cat);
    }

    // Live Stats
    setInterval(() => {
        const now = new Date();
        const clock = now.toLocaleTimeString();
        document.getElementById('sys-stats').innerHTML = `TIME: ${clock}<br>NODE: STABLE<br>CLOAK: ACTIVE`;
    }, 1000);

    // Panic Key
    document.addEventListener('keydown', (e) => { if(e.key.toLowerCase() === 'p') triggerBSOD(); });

    // --- MATRIX BACKGROUND ---
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth; canvas.height = window.innerHeight;
    const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%^&*()*&^%";
    const fontSize = 14;
    const columns = canvas.width / fontSize;
    const drops = Array.from({ length: columns }).fill(1);

    function drawMatrix() {
        ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
        ctx.fillRect(0, 0, canvas.width, canvas.height);
        ctx.fillStyle = "#00ff88"; 
        ctx.font = fontSize + "px monospace";
        drops.forEach((y, i) => {
            const text = letters[Math.floor(Math.random() * letters.length)];
            ctx.fillText(text, i * fontSize, y * fontSize);
            if (y * fontSize > canvas.height && Math.random() > 0.975) drops[i] = 0;
            drops[i]++;
        });
    }
    setInterval(drawMatrix, 35);
</script>
</body>
